<html xmlns="http://www.w3.org/1999/xhtml" ng-app="SupportApp">
<head>
    <title>We Connect You Here</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <base href="/" />
</head>
<body ng-controller="AccountController as account" ng-cloak>
    <div class="container">
        <h1><img src="~/images/logo.png" width="50" height="50" /><img src="~/images/logo1.png" width="350" height="50" /></h1>
        <div class="row">
            <div class="col-md-1" style="background-color: lightgreen">
                <a href="/">Home</a>
            </div>
            <div class="col-md-1" style="background-color: lightyellow">
                <a href="/about">About</a>
            </div>
            <div class="col-md-1" style="background-color: lightblue">
                <a href="/events">Events</a>
            </div>
            <div class="col-md-1" style="background-color: yellow">
                <a href="/secret">Secret</a>
            </div>
            <div class="col-md-1" style="background-color: lightpink">
                <a href="/login" ng-show="!account.isLoggedIn()">Login</a>
                <a href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
                <div ng-show="account.isLoggedIn()">
                    [{{account.getUserName()}}]
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
    <ui-view></ui-view>
    </div>

    <!-- Library Files -->
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>    
    <script src="~/lib/angular-filter/dist/angular-filter.min.js"></script>

    <!-- App Files-->
    <script src="~/ngapp/app.js"></script>
    <script src="~/ngapp/services/services.js"></script>
    <script src="~/ngApp/services/eventServices.js"></script>
    <script src="~/ngapp/controllers/controllers.js"></script>
    <script src="~/ngApp/controllers/eventsController.js"></script>
    <script src="~/ngApp/controllers/eventsDetailController.js"></script>
    <script src="~/ngApp/controllers/eventCreateController.js"></script>
    <script src="~/ngApp/controllers/eventEditController.js"></script>
    <script src="~/ngApp/controllers/eventDeleteDialogController.js"></script>

    <!-- Security -->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/services/accountservice.js"></script>

</body>
</html>
